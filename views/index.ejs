<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To do list</title>
    <link href="https://fonts.googleapis.com/css?family=Cardo&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/assets/style.css">
</head>
<body>
    <h1>To-do list</h1>
    <form method="POST" action="/">
        <input type="text" class="addTodo" name="item">
        <input type="submit" value="+" class="submitButton">
    </form>
    <ul>
        <% for (var i=0; i<todo.length; i++){ %>
        <form action="/" method="POST" id="deleteForm-<%=i%>">
            <li id="<%=i%>"><%=todo[i].item%></li>
            <input type="submit" value="Hop!" class="deleteButton">
            <script>
                document.getElementById('deleteForm-<%=i%>').addEventListener('submit', async event => {
                    event.preventDefault();

                    const id = document.getElementById("deleteForm-<%=i%>").innerText;

                    const res = await fetch(`http://localhost:4000/` + id, {
                        method: 'DELETE',
                    });
                    window.location.href='/'
                });
        </script>
        </form>
        <%}%>
    </ul>
</body>
</html>